<div class="container">
  <div class="row">
    <h1>Listing Cards</h1>
    <div class="col-lg-12">
      <p id="notice"><%= notice %></p>
      <table>
        <thead>
          <tr>
            <th>Question</th>
            <th>Answer</th>
            <th>Share</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @cards.each do |card| %>
          <tr>
            <td><%= card.question %></td>
            <td><%= card.answer %></td>
            <td><%= card.share %></td>
            <td><%= link_to 'Show', card %></td>
            <td><%= link_to 'Edit', edit_card_path(card) %></td>
            <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Card', new_card_path %>
    </div>
  </div>
</div>
