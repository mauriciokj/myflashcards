<div class="container">
<h2>Listing Cards</h2>
  <div class="row">
    <div class="col-lg-12">
      <p id="notice"><%= notice %></p>
        <table class="table table-hover table-responsive">
        <thead>
          <tr>
            <th>Title</th>
            <th>Question</th>
            <th>Answer</th>
            <th>Kind</th>
            <th>Case Sensitive</th>
            <th>Share</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @cards.each do |card| %>
          <tr>
            <td><%= card.title %></td>
            <td><%= card.question %></td>
            <td><%= card.answer %></td>
            <td><%= card.name %></td>
            <td><%= card.case_sensitive || false %></td>
            <td><%= card.share %></td>
            <td><%= link_to 'Show', card %></td>
            <td><%= link_to 'Edit', edit_card_path(card) %></td>
            <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Card', new_card_path %>
      <br>
      <%= render partial: 'pagination/pagination', locals: {objects: @cards} %>
    </div>
  </div>
</div>
