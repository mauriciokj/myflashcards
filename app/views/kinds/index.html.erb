<div class="container">
<h2>Listing Kinds</h2>
  <div class="row">
    <div class="col-lg-12">
      <p id="notice"><%= notice %></p>
      <table class="table table-hover table-responsive">
        <thead>
          <tr>
            <th>Name</th>
            <th>Color</th>
            <th>Personal</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @kinds.each do |kind| %>
          <tr>
            <td><%= kind.name %></td>
            <td><%= kind.color %></td>
            <td><%= kind.personal %></td>
            <td><%= link_to 'Show', kind %></td>
            <td><%= link_to 'Edit', edit_kind_path(kind) %></td>
            <td><%= link_to 'Destroy', kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Kind', new_kind_path %>
      <br>
      <%= render partial: 'pagination/pagination', locals: {objects: @kinds} %>
    </div>
  </div>
</div>
