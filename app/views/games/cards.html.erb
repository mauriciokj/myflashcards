<!-- Page Content -->
<div class="container">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">My Flash Cards
                <small>Studing made easy</small>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <%= form_tag( games_cards_path(@kind.id), :method => "get", id: "search-form") do %>
                <%= search_field_tag :search, params[:search], autofocus: true, placeholder: "Search cards", class: 'form-control search' %>
                <%= submit_tag "Search", class: 'game btn btn-primary btn-twitter btn-sm' %>
            <% end %>
        </div>
    </div>



    <!-- Projects Row -->
    <div class="row">
        <% @cards.each do  |card| %>
        <%= render partial: 'card', :locals => { :card => card } %>
        <% end %>
    </div>


    <hr>
    <!-- Pagination -->
    <%= render partial: 'pagination/pagination', locals: {objects: @cards} %>
    <!-- /.row -->

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; PI2007 2016 </p>
            </div>
        </div>
        <!-- /.row -->
    </footer>

</div>
<!-- /.container -->
