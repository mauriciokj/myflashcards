<!-- Page Content -->
<div class="container">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">My Flash Cards
                <small>Studing made easy</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <!-- Projects Row -->
    <div class="row">
        <% @cards.each do  |card| %>
        <%= render partial: 'card', :locals => { :card => card } %>
        <% end %>
    </div>


    <hr>
    <!-- Pagination -->
    <%= render partial: 'pagination/pagination', locals: {objects: @cards} %>
    <!-- /.row -->

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; PI2007 2016 </p>
            </div>
        </div>
        <!-- /.row -->
    </footer>

</div>
